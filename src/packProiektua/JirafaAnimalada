package packProiektua;

public class JirafaAnimalada implements InterfaceAnimalada {

	public JirafaAnimalada(){
		
	}
	@Override
	public void gaitasunaBurutu(int a) {
		Tableroa t= Tableroa.getNireTableroa();
		KartaZerrenda kZ = t.getKola();
		Karta k= t.getKola().azkenaLortu();
		if (kZ.luzera()>1){
			boolean irten=false;
			Karta aux= kZ.getKarta(kZ.luzera()-1);
			while ((aux.getBalioa()<k.balioa)&&(!irten)){
				kZ.elkartrukatu(aux, k, kZ.posizioaLortu(aux), kZ.posizioaLortu(k));
				int ind=kZ.posizioaLortu(k);
				if (ind>1){
					aux=kZ.getKarta(ind-1);
				} else {
					irten=true;
				}
				
			}
		}

	}

}
